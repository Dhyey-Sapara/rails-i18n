<div class="w-full">
  <div>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>
  <div class="w-fit bg-green-300 p-2 rounded-lg text-slate-50">
    <%= link_to t('session.logout'), destroy_user_session_path, data: { turbo_method: :delete } %>
  </div>
  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl"><%= t('hello', email: current_user.email) %></h1>
  </div>
  <h1 class="font-bold text-4xl"><%= I18n.t 'article.articles' %></h1>

  <div id="articles" class="min-w-full">
    <%= render @articles %>
  </div>
</div>
