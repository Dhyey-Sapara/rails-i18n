<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= link_to t('session.logout'), destroy_user_session_path, data: { turbo_method: :delete } %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= "#{t('hello')}, #{current_user.email}" %></h1>
  </div>
  <h1 class="font-bold text-4xl"><%= I18n.t 'article.articles' %></h1>

  <div id="articles" class="min-w-full">
    <%= render @article %>
  </div>
</div>